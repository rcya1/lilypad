{
  "name": "lilypad-extension",
  "displayName": "Lilypad Extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.config/lilypad"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lilypad-extension.togglePreview",
        "title": "Toggle HTML Preview",
        "category": "Lilypad",
        "icon": {
          "light": "./icon-light.svg",
          "dark": "./icon-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == markdown",
          "command": "lilypad-extension.togglePreview",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "lilypad-extension.togglePreview",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorLangId == markdown || lilypad-extension.previewFocused"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lilypad",
          "title": "Lilypad",
          "icon": "./icon-light.svg"
        }
      ]
    },
    "views": {
      "lilypad": [
        {
          "id": "lilypad-extension-browser",
          "name": "Files"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "front-matter": "^4.0.2"
  }
}
